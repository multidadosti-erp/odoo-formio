<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_order_form_formio_contract" model="ir.ui.view">
        <field name="name">service.contract.view.form.formio</field>
        <field name="model">service.contract</field>
        <field name="inherit_id" ref="service_contract_line_event.service_contract_view_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="action"
                    name="%(formio.action_formio_form)d"
                    class="oe_stat_button"
                    icon="fa-file-text"
                    context="{'search_default_contract_id': id,
                              'search_default_res_model_id': formio_this_model_id,
                              'default_res_model_id': formio_this_model_id,
                              'default_contract_id': id}">
                    <field name="formio_forms_count" widget="statinfo" string="Forms"/>
                </button>
            </div>
            <xpath expr="//form/sheet" position="inside">
                <field name="formio_this_model_id" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
